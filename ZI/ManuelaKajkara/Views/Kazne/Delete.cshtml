@model ManuelaKajkara.Kazna

@{
    
    ViewBag.Title = "Brisanje kazne za " + ViewBag.Title;
      
}

<h2>@ViewBag.Title</h2>

<h3>Sigurno želite obrisati ovu kaznu?</h3>
<div>
    <h4>Kazna</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Iznos
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Iznos)
        </dd>

        <dt>
            Opis
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Opis)
        </dd>

        <dt>
            Vrsta kazne
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Naziv)
        </dd>


    </dl>
</div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Odustani", "Index")
        </div>
    }
