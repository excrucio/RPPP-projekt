@model Kategorija

@{
    ViewBag.Title = "Uredi kategoriju";
}

<h2>Uredi kategoriju</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Kategorija suda</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @*@Html.LabelFor(model => model.NazivKatSuda, new { @class = "control-label col-md-2" })*@
            <p> Naziv kategorije suda</p>
            <div class="col-md-10">
                @Html.EditorFor(model => model.naziv)
                @*@Html.ValidationMessageFor(model => model.naziv)*@
                <td>@Html.ValidationMessage("Naziv", "Nedozvoljen format unosa.")</td>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Spremi" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Povratak na popis", "Index")
</div>
