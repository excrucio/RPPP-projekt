@model Sudionik

@{
    ViewBag.Title = "Brisanje sudionika";
}

<h2>Obriši</h2>

<h3>Jeste li sigurni da želite obrisati podatak?</h3>
<div>
    <h4>Sudionik</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Uloga
        </dt>

        <dd>
            @Html.DisplayFor(model => new UlogaBLL().Fetch(model.Uloga).NazivUloge)
        </dd>

        <dt>
            Ime i prezime
        </dt>

        <dd>
            @Html.DisplayFor(model => new OsobaBLL().Fetch(model.IDOsobe).ImePrezime)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Obriši" class="btn btn-default" /> |
            @Html.ActionLink("Povratak na listu", "Index")
        </div>
    }
</div>
