@model UlogaSudionika

@{
    ViewBag.Title = "Brisanje uloge";
}

<h2>Obriši</h2>

<h3>Jeste li sigurni da želite obrisati podatak?</h3>
<div>
    <h4>Uloga sudionika</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Naziv uloge
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NazivUloge)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Obriši" class="btn btn-default" /> |
            @Html.ActionLink("Natrag na listu", "Index")
        </div>
    }
</div>
