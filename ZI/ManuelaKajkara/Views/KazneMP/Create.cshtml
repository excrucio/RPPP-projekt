@model DAL.EF.Kazna

@{
    ViewBag.Title = "Nova kazna";
}

<h2>Nova kazna</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Kazna</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.IDKazne, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IDKazne)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDPresude, "Presuda", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IDPresude", String.Empty)
                @Html.ValidationMessageFor(model => model.IDPresude)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDOsobe, "OIB osobe", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IDOsobe", String.Empty)
                @Html.ValidationMessageFor(model => model.IDOsobe)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Vrsta, "Vrsta kazne", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Vrsta", String.Empty)
                @Html.ValidationMessageFor(model => model.Vrsta)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Iznos, "Iznos",new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Iznos)
                @Html.ValidationMessageFor(model => model.Iznos)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Opis,"Opis", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Opis)
                @Html.ValidationMessageFor(model => model.Opis)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Spremi" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Nazad", "Index")
</div>
